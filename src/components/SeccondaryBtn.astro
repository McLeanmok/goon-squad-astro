---
interface Props {
    text: string;
    link: string;
}
const { text="Default Button Text", link="#" } = Astro.props;
---
<a href={link} class="btn-seccondary">{text}</a>

<style>   
  a {
  background-color: var(--clr-secondary);
  color: var(--clr-white);
  padding: 1rem;
  border: none;
  cursor: pointer;
  border-radius: 0.5rem;
  font-weight: 700;
  transition: 0.3s ease-in-out;
}
  a:hover,
  a:focus {
  opacity: 80%;
}
</style>