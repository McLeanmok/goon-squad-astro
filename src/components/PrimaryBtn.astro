---
interface Props {
    text: string;
    link: string;
}
const { text="Default Button Text", link="#" } = Astro.props;
---
<a href={link} class="btn-primary">{text}</a>

<style>
 .btn-primary {
  background-color: var(--clr-primary);
  color: var(--clr-white);
  padding: 1rem;
  border: none;
  cursor: pointer;
  border-radius: 0.5rem;
  font-weight: 700;
  transition: 0.3s ease-in-out;
}
.btn-primary:hover,
.btn-primary:focus {
  opacity: 80%;
}
</style>